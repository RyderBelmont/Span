<?xml version='1.0' encoding='UTF-8'?>
<costume>
    <id>rosa_princess</id>
    <label>Princess Rosalia</label>
    <tags>
        <tag>alternative_skin</tag>
        <tag>drill_hair</tag>
        <tag>fantasy</tag>
        <tag>formal_attire</tag>
        <tag remove="true">hat</tag>
        <tag from="0" to="1">high_heels</tag>
        <tag from="0" to="0">jewelry</tag>
        <tag>princess</tag>
        <tag remove="true">pubic_hair</tag>
        <tag>royalty</tag>
        <tag>shaved</tag>
        <tag from="0" to="4">thigh_highs</tag>
        <tag>valentines_skin</tag>
        <tag from="3" to="3">vanishes_clothes</tag>
    </tags>
    <folder>opponents/reskins/rosa_princess/</folder>
    <wardrobe>
        <clothing name="panties" generic="underwear" position="lower" type="important" plural="true" />
        <clothing name="bra" generic="bra" position="upper" type="important" />
        <clothing name="stockings and garters" generic="leggings" position="lower" type="major" />
        <clothing name="dress" generic="dress" position="upper" type="major" />
        <clothing name="gloves" generic="shorts" position="hands" type="minor" plural="true" />
        <clothing name="glass slippers" generic="shoes" position="feet" type="minor" plural="true" />
        <clothing name="tiara" generic="jewelry" position="head" type="extra" plural="true" />
    </wardrobe>

    <poses>
        <pose id="3-stripping_animation">
            <sprite id="stripping" src="reskins/rosa_princess/3-stripping.png" x="0" y="0" />
            <sprite id="stripping_glow" delay="1" z="3" src="reskins/rosa_princess/3-stripping_glow.png" x="0" y="0" alpha="0" />
            <directive type="animation" id="stripping_glow" delay="1" ease="smooth" interpolation="linear">
                <keyframe time="0" x="0" y="0" alpha="0" />
                <keyframe time="1" alpha="100" />
            </directive>
        </pose>
        <pose id="4-stripped_animation">
            <sprite id="stripped" src="reskins/rosa_princess/4-stripped.png" x="0" y="0" />
            <sprite id="stripped_glow" z="3" src="reskins/rosa_princess/4-stripped_glow.png" x="0" y="0" alpha="100" />
            <directive type="animation" id="stripped_glow" ease="smooth" interpolation="linear">
                <keyframe time="0" x="0" y="0" alpha="100" />
                <keyframe time="1" alpha="100" />
                <keyframe time="2" alpha="0" />
            </directive>
        </pose>
    </poses>
</costume>
