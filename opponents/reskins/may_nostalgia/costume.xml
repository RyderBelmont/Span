                <keyframe time="0" x="250" alpha="0" />
                <keyframe time="1" x="250" alpha="0" />
                <keyframe time="2" x="0" alpha="100" />
                <keyframe time="3" x="0" />
            </directive>
            <directive type="animation" id="Rouge_TreasureScope_Lens" ease="smooth" interpolation="linear">
                <keyframe time="0" y="365" />
                <keyframe time="3" y="365" />
