<?xml version='1.0' encoding='UTF-8'?>
<costume>
    <id>may_summer</id>
    <label>May</label>
    <tags>
        <tag>alternative_skin</tag>
        <tag from="0" to="0">choker</tag>
        <tag>fair-skinned</tag>
        <tag from="0" to="3">jewelry</tag>
        <tag remove="true">pale-skinned</tag>
        <tag>pubic_hair</tag>
        <tag remove="true">shaved</tag>
        <tag remove="true">spats</tag>
        <tag>summer_skin</tag>
        <tag from="5" to="7">swimwear</tag>
    </tags>
    <folder>opponents/reskins/may_summer/</folder>
    <wardrobe>
        <clothing name="bikini bottoms" generic="swimsuit" position="lower" type="important" plural="true" />
        <clothing name="bikini top" generic="swimsuit" position="upper" type="important" />
        <clothing name="skirt" generic="skirt" position="lower" type="major" />
        <clothing name="top" generic="shirt" position="upper" type="major" />
        <clothing name="veil" generic="jewelry" position="head" type="extra" />
        <clothing name="bracelets" generic="jewelry" position="arms" type="extra" plural="true" />
        <clothing name="sandals" generic="shoes" position="feet" type="minor" plural="true" />
        <clothing name="necklace" generic="jewelry" position="neck" type="extra" />
    </wardrobe>

    <poses>
        <pose id="0-treasure_scope">
            <sprite id="oopsy" z="1" src="reskins/may_summer/0-oopsy.png" x="0" y="0" alpha="100" />
            <sprite id="oopsy_scope" src="reskins/may_summer/x-rouge_scope.png" x="0" y="0" alpha="100" />
            <sprite id="Rouge_TreasureScope_Lens" z="100" src="reskins/may_summer/x-treasure_scope.png" x="250" y="365" alpha="0" />
            <directive type="animation" id="oopsy" ease="linear" interpolation="linear">
                <keyframe time="0" alpha="100" />
                <keyframe time="2" alpha="100" />
                <keyframe time="2.5" alpha="0" />
            </directive>
            <directive type="animation" id="oopsy_scope" ease="linear" interpolation="linear">
                <keyframe time="0" alpha="100" />
                <keyframe time="3" alpha="100" />
            </directive>
            <directive type="animation" id="Rouge_TreasureScope_Lens" ease="ease-out" interpolation="linear">
                <keyframe time="0" x="250" alpha="0" />
                <keyframe time="1" x="250" alpha="0" />
                <keyframe time="2" x="0" alpha="100" />
                <keyframe time="3" x="0" />
            </directive>
            <directive type="animation" id="Rouge_TreasureScope_Lens" ease="smooth" interpolation="linear">
                <keyframe time="0" y="365" />
                <keyframe time="3" y="365" />
            </directive>
        </pose>
    </poses>
</costume>
