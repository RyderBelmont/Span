<!--
  This is exactly what it says on the file, an example epilogue to explain and show off the new features
  available to epilogue writers (and to give example syntax until this makes it into the character editor)
-->
<epilogue gender='any' img='/img/testing-badge.png' ratio='847:750'>
  <title>Example made in new epilogue engine!</title>

  <!-- "background" tags contain any frames with the same background image -->
  <!-- note that absolute paths are now supported if you want images from other folders -->
  <background img='/img/background1.png'>
    <!-- "scene" tags hold any frames with a given layout of images/characters -->
    <scene background-zoom='15%' background-position-x='20%' background-position-y='10%'>
      <!-- "sprite" tags have the same syntax as the old text boxes, but have an image source instead of text content, these should hold your foreground images -->
      <sprite>
        <x>30%</x>
        <y>10%</y>
        <width>30%</width>
        <src>0-shy.png</src>
      </sprite>
      <sprite>
        <x>80%</x>
        <y>50%</y>
        <width>10%</width>
        <src>0-appreciative.png</src>
      </sprite>

      <!-- "text" tags are the same as they used to be, same syntax and same behavior -->
      <text>
        <x>60%</x>
        <y>28%</y>
        <width>15%</width>
        <arrow>left</arrow>
        <content>Here's a text box!</content>
      </text>

      <text>
        <x>2%</x>
        <y>22%</y>
        <width>22%</width>
        <arrow>right</arrow>
        <content>This is a second text box in the same scene!</content>
      </text>
    </scene>
  </background>

  <background img='/img/background2.png'>
    <scene>
    </scene>
    <scene>
    </scene>
  </background>
</epilogue>